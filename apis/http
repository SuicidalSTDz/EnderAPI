function http.download( sUrl, sPath )
	assert( type( sUrl ) == "string", "string expected, got " .. type( sUrl ) )
	assert( type( sPath ) == "string", "string expected, got " .. type( sPath ) )
	if fs.exists( sPath ) then
		error( "path already exists", 2 )
	end
	local f = fs.open( sPath, "w" )
	local response = http.get( sUrl )
	if response then
		f.write( response.readAll() )
	end
	f.close()
	response.close()
end
