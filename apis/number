generate = function( nChars, nMin, nMax )
  assert(type(nChars)=="number","number expected, got "..type(nChars))
  assert(type(nMins)=="number","number expected, got "..type(nMin))
  assert(type(nMax)=="number","number expected, got "..type(nMax))
  assert(nMin<nMax,"minimum must be less than maximum")

  local n = math.random( nMin, nMax )
  for i = 1, nChars do
    n = n .. math.random( nMin, nMax )
  end
  return n
end

isOdd = function( n )
  assert(type(n)=="number","number expected, got "..type(n))
  return n % 2 ~= 0
end

isEven = function( n )
  assert(type(n)=="number","number expected, got "..type(n))
  return n % 2 == 0
end
